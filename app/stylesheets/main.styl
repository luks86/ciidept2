time.icon
{
    font-size: 1em;
    display: block;
    position: relative;
    /* top: 15px; */
    width: 100%;
    height: 250px;
    background-color: #fff;
    background: rgba(255,255,255,0.5);
    /* border-radius: 0.6em; */
    box-shadow: 0 1px 0 #bdbdbd, 0 2px 0 #fff, 0 3px 0 #bdbdbd, 0 4px 0 #fff, 0 5px 0 #bdbdbd, 0 0 0 1px #bdbdbd;
    overflow: hidden;
}

time.icon * {
    display: block;
    width: 100%; 
    font-size: 1.6em;
    font-weight: bold;
    font-style: normal;
    text-align: center;
}
time.icon p{
    display: inline-block;
    margin-top: 15%;
    font-size: 1.2em;
    font-weight: bold;
    font-style: normal;
    text-align: center;
}
time.icon strong
{
  position: absolute;
  top: 0;
  padding: 0.4em 0;
  color: #fff;
  background-color: #fd9f1b;
  border-bottom: 1px dashed #f37302;
  box-shadow: 0 2px 0 #fd9f1b;
}

time.icon em {
       position: absolute;
    top: 75%;
    color: #4d4848;
    font-size: 3em;
}

time.icon span
{
  font-size: 6em;
  letter-spacing: -0.05em;
  padding-top: 0.8em;
  color: #2f2f2f;
}

time.icon a {
  position: relative;
  display: block;
  width: 145px;
  height: 30px;
  margin-left: 107px;
  text-align: center;
  top: 6px;
  font-size: 0.9em;
  font-weight: bold;
}

time.icon:hover, time.icon:focus
{
  -webkit-animation: swing 0.6s ease-out;
  animation: swing 0.6s ease-out;
}

